{
    "manifest_version": 3,
    "name": "time-management-extension",
    "version": "1.0.0",
    "description": "Time management extension",
    "icons": {
      "128": "icon.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScripts/siteTimer.js"]
      }
    ],
    "action": {
      "default_popup": "popup/popup.html"
    },
    "permissions": ["tabs", "activeTab", "scripting", "storage"]
}